{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C: gcc.exe build active file",
			"command": "C:\\MinGW\\bin\\gcc.exe",
			"args": [
				"-g",
				"${workspaceFolder}/src/*.c",
				"-Iinclude",
				"-Llib",
				"-lglfw3",
				"-lvulkan-1",
				"-lgdi32",
				"-Wall",
				"-Wextra",
				"-o",
				"program.exe",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\MinGW\\bin\\gcc.exe"
		}
	]
}